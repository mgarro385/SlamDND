<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="#000000"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll Dice"
        android:id="@+id/rollBtn"
        android:layout_marginTop="155dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:layout_marginRight="66dp"
        android:layout_marginEnd="66dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Encounter"
        android:id="@+id/encounterBtn"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/rollBtn"
        android:layout_alignStart="@+id/rollBtn"
        android:layout_alignRight="@+id/rollBtn"
        android:layout_alignEnd="@+id/rollBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Loot"
        android:id="@+id/lootBtn"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/encounterBtn"
        android:layout_alignLeft="@+id/encounterBtn"
        android:layout_alignStart="@+id/encounterBtn"
        android:layout_alignRight="@+id/encounterBtn"
        android:layout_alignEnd="@+id/encounterBtn" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/dndlogo2"


        android:layout_alignBottom="@+id/rollBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
